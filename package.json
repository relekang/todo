{
  "name": "@relekang/todo",
  "version": "2.0.0-rc.6",
  "description": "A todo cli",
  "license": "MIT",
  "esy": {
    "build": "dune build -p todo",
    "buildDev": "pesy",
    "release": {
      "releasedBinaries": [
        "TodoApp.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": [
        "todo.lib"
      ],
      "main": "TestTodo",
      "name": "TestTodo.exe"
    },
    "library": {
      "name": "todo.lib",
      "namespace": "Todo",
      "require": [
        "yaml",
        "yojson"
      ]
    },
    "executable": {
      "require": [
        "cmdliner",
        "pastel.lib",
        "console.lib",
        "todo.lib"
      ],
      "main": "TodoApp",
      "name": "TodoApp.exe"
    }
  },
  "scripts": {
    "echo-version": "echo $npm_package_version",
    "version": "./scripts/version.sh",
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestTodo.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": ">=1.6.0",
    "@opam/yaml": "2.0.0",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/pastel": "^0.2.1",
    "isexe": "^2.0.0",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}
